{
  "manifest_version": 3,
  "name": "Dipol Translator",
  "version": "1.0",
  "description": "Translates text fields automatically.",
  "permissions": ["scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://example.com/translator*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
