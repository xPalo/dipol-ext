{
  "manifest_version": 3,
  "name": "DIPOL Auto Translator (DeepL)",
  "version": "1.1",
  "description": "Preklad textov v tabuľkách cez DeepL (free Google fallback) po kliknutí na tlačidlo.",
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://api-free.deepl.com/*",
    "https://api.deepl.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://tools.dipol.sk/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "options.html",
    "default_title": "Translator"
  }
}
